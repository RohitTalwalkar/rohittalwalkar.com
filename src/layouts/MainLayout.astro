---
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Rohit Talwalkar</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <style>
    :root {
      font-family: system-ui, sans-serif;
    }
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      margin: 0;
    }
    .main-container {
      display: flex;
      flex: 1;
    }
    main {
      flex: 1;
      padding: 1rem;
      padding-bottom: 60px; /* To avoid content being hidden by the fixed footer */
      min-width: 50vw;
    }
  </style>
</head>
<body>
  <Header />
  <div class="main-container">
    <Sidebar />
    <main>
      <slot />
    </main>
  </div>
  <Footer />
</body>
</html>
